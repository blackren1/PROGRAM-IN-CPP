
#include <iostream>
using namespace std;

int main () {

	int P, G;

 cout << "Give me the first number please:  ";
 cin >> P;
 cout << "Gime me the second number please:  ";
 cin >> G;

	cout << "The sum of the two numbers is...  ";
      cout << P + G << endl;
	cout << "The difference of the two numbers is...  ";
      cout << P - G << endl;
  cout << "The product of the two numbers is...  ";
      cout << P * G << endl;
  cout << "The division of the two numbers is...  ";
      cout << P / G <<endl;
  cout << "The remainder of the division is...  ";
      cout << P % G <<endl;
return 0; 
}
